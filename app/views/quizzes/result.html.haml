#quiz_result
  .container
    %h1= @quiz.title
    .quiz_area
      - if @user_choiced.correct
        %p.currect.text-danger.center ◯ 正解
      - else
        %p.uncorrect.text-primary.center × 不正解
    .card
      .card-header 解説
      .card-body= @quiz.explanation
    %br
    .card
      .card-header 本文
      .card-body= @quiz.body
    %br
    .card
      .card-header 選択肢
      %ul.list-group.list-group-flush
        - @quiz.choices.each do |choice|
          - if choice == @user_choiced
            %li.list-group-item
              = "#{choice.sentence}"
              %span.badge.badge-danger.float-right あなたの解答
          - else
            %li.list-group-item= choice.sentence
    %br
    .card
      .card-header 他の人の回答
      %ul.list-group.list-group-flush
        - @quiz.choices.each do |choice|
          %li.list-group-item
            %span= choice.sentence
            %span.badge.badge-primary.float-right= "#{choice.answers_count}人が回答"
